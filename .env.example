# ViralCore Bot Configuration

# ========================================
# Core API Keys (REQUIRED)
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
FLUTTERWAVE_API_KEY=your_flutterwave_api_key_here
EXCHANGE_API_KEY=your_exchange_api_key_here

# ========================================
# Database Configuration
# ========================================
# Directory for all SQLite database files
# Default: ./db
DB_DIR=./db

# ========================================
# Withdrawal Configuration
# ========================================
# Disable admin approval for withdrawals (for testing/staging only)
# Set to 'true' to bypass admin approval
# Default: false (admin approval required)
DISABLE_ADMIN_APPROVAL=false

# Number of retry attempts for failed withdrawal API calls
# Default: 3
WITHDRAWAL_RETRY_COUNT=3

# Backoff time in seconds between retry attempts
# Default: 60
WITHDRAWAL_RETRY_BACKOFF_SEC=60

# ========================================
# Admin Notification Configuration
# ========================================
# Comma-separated list of Telegram group IDs for admin notifications
# You can use either ADMIN_TELEGRAM_CHAT_ID or ADMIN_GROUP_ENDPOINT (both work)
# Example: -1001234567890,-1009876543210
# This is also used for daily link submission reports at 12:00 PM
ADMIN_TELEGRAM_CHAT_ID=-4855378356
ADMIN_GROUP_ENDPOINT=-4855378356

# ========================================
# Likes Group Configuration (Independent Admin Group)
# ========================================
# Enable sending posts to a second independent group that receives likes_needed metric
# This group is exempt from rotation and receives every post unconditionally
# Default: false (disabled for backward compatibility)
ADMIN_LIKES_GROUP_ENABLED=false

# Telegram chat ID for the Likes Group
# Required when ADMIN_LIKES_GROUP_ENABLED=true
# Example: -1001234567890
ADMIN_LIKES_GROUP_CHAT_ID=

# Comma-separated list of admin email addresses
# Example: admin@example.com,alerts@example.com
ADMIN_CONTACTS=

# Disable all notifications (for testing)
# Default: false
DISABLE_NOTIFICATIONS=false

# Disable only Telegram notifications (for testing)
# Default: true (enabled)
ENABLE_TELEGRAM_NOTIFICATIONS=true

# ========================================
# Email Notification Configuration (Optional)
# ========================================
# SMTP server for sending email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@viralcore.bot

# ========================================
# Slack Notification Configuration (Optional)
# ========================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# ========================================
# Application Startup
# ========================================
# Optional: Custom command for production startup (e.g., gunicorn)
# If not set, uses: python3 main_viral_core_bot.py
# GUNICORN_CMD=gunicorn -w 4 -k uvicorn.workers.UvicornWorker app:app

# ========================================
# Other API Keys (Optional)
# ========================================
BOT_USERNAME=your_bot_username
BITLY_ACCESS_TOKEN=your_bitly_token_here
CM_API_KEY=your_coingecko_api_key
BSC_API_KEY=your_bsc_api_key
SOL_API_KEY=your_solana_api_key
TRX_GRID_API_KEY=your_tron_api_key
HELIUS_API_KEY=your_helius_api_key
TRX_SCAN_API_KEY=your_tronscan_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ========================================
# Boosting Service API Keys
# ========================================
SMMFLARE_API_KEY=your_smmflare_api_key
PLUGSMMS_API_KEY=your_plugsmms_api_key
SMMSTONE_API_KEY=your_smmstone_api_key

# Plugsmm Provider Configuration
# Enable new API implementation (recommended)
# Set to 'false' to use legacy implementation (rollback)
# Default: true
PLUGSMM_USE_NEW_API=true

# Enable order tracking for Plugsmm provider
# Allows status checks and refill operations
# Default: true
PLUGSMM_ENABLE_ORDER_TRACKING=true

# ========================================
# UI Assets
# ========================================
MAIN_MENU_IMAGE_PATH=./propic.jpeg
ADMIN_PANEL_IMAGE_PATH=./propic.jpeg
